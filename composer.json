{
  "name": "calderawp/http",
  "description": "A boilerplate for new composer based PHP projects.",
  "license": "GPL-2.0",
  "require": {
    "php": "^7.2",
    "inpsyde/wpsr7": "^1.0"
  },
  "require-dev": {
    "php": "^7.2",
    "mockery/mockery": "^1.2",
    "phpunit/phpunit": "^7.3",
    "squizlabs/php_codesniffer": "3.*",
    "inpsyde/wpsr7": "^1.0",
    "guzzlehttp/guzzle": "^6.3"
  },
  "config": {
    "platform": {
      "php": "7.2"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "calderawp\\caldera\\Http\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "calderawp\\caldera\\Http\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit tests",
    "tests-now": "phpunit tests --group=now",
    "sniffs": "phpcs src/ && phpcs src/",
    "fixes": "phpcbf src/ && phpcbf tests/"
  }
}
